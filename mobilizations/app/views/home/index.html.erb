							<% if @user.nil? %>
								<li role="presentation"><a href="javascript:void(0);" onclick="document.getElementById('id01').style.display='block'">Login</a></li>															
								<li role="presentation"><a href="javascript:void(0);" onclick="document.getElementById('id02').style.display='block'">Cadastro</a></li>	
