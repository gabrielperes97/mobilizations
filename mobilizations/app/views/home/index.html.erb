                    </li>
				</ul>
			</div>
		</div>
	</nav>
	<!--Tela de login-->
	<div id="id01" class="modal">								  
		<form class="modal-content animate" action="/home" method="post" data-remote="true" accept-charset="UTF-8">
			<div class="imgcontainer">
				<span onclick="document.getElementById('id01').style.display='none'" class="close" title="Fechar">&times;</span>
				<img src="assets/fuser.png" alt="Avatar" class="avatar">
			</div>

			<div class="container_login">
				<label><b>Email</b></label>
				<input type="text" placeholder="Entre com o email" name="login[email]" required>

				<label><b>Senha</b></label>
				<input type="password" placeholder="Entre com a senha" name="login[password]" required>

				<div id="login-messages"> </div>
				<button type="submit">Login</button>
				<label><input type="checkbox" checked="checked" name="login[remember]">Lembrar</label>
			</div>
			<div class="container_login" style="background-color:#f1f1f1">
				<button type="button" onclick="document.getElementById('id01').style.display='none'" class="cancelbtn">Cancelar</button>
				<span class="psw">Esqueceu <a href="#">a senha?</a></span>
			</div>
		</form>
	</div>
	<!--Tela de Cadastro-->
	<div id="id02" class="modal">								  
		<form class="modal-content animate" action="/usuario" method="post" data-remote="true" accept-charset="UTF-8">
			<div class="imgcontainer">
				<span onclick="document.getElementById('id02').style.display='none'" class="close" title="Fechar">&times;</span>
				<img src="assets/cadastro_icon.png" alt="Avatar" class="avatar">
			</div>

			<div class="container_login">
				<label><b>Nome</b></label>
				<input type="text" placeholder="Entre com seu nome" name="usuario[name]" required>

				<label><b>Senha</b></label>
				<input type="password" placeholder="Entre com a senha" name="usuario[password]" required>
				
				<label><b>Confirme a Senha</b></label>
				<input type="password" placeholder="Entre novamente com a senha" name="usuario[passwordC]" required>

				<label><b>Email</b></label>
				<input type="password" placeholder="Entre com o email" name="usuario[email]" required>

				<div id="register-messages"> </div>

				<button id="button-blue" type="submit">Cadastrar</button>


			</div>
			<div class="container_login" style="background-color:#f1f1f1">
				<button type="button" onclick="document.getElementById('id02').style.display='none'" class="cancelbtn">Cancelar</button>
			</div>
		</form>
	</div>
