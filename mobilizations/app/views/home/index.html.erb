			</div>
			<!--Direita-->
			<div id="navbar" class="collapse navbar-collapse">
				<ul class="nav navbar-nav">
					<li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false" href="#">
							<img class="img-circle" src="assets/user.png" width="25" height="25">
							<strong>
								<% if @user.nil? %>
									Faça ou crie seu Login
								<% else %>
									<%= "Bem vindo, "+@user.name %>
								<%end%>
							</strong>
							<span class="caret"></span>
						</a>
