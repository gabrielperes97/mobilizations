<html>
    <body>
        <div>
            <center><h1>Informações da Meta</h1></center><br>
            <table align="center" width="50%">
                <tr>
                    <th><h3><b>Titulo</th><td><h3>:&nbsp;&nbsp;&nbsp;&nbsp;<%= @meta.title %></td>
                </tr>
                <tr>
                    <th><h3><b>Descrição</th><td><h3>:&nbsp;&nbsp;&nbsp;&nbsp;<%= @meta.description%></td>
                </tr>
                <tr>
                    <th><h3><b>Aprovado em</th><td><h3>:&nbsp;&nbsp;&nbsp;&nbsp;<%= @meta.aproved_at%></td>
                </tr>
                <tr>
                    <th><h3><b>Criado em</th><td><h3>:&nbsp;&nbsp;&nbsp;&nbsp;<%= @meta.created_at%></td>
                </tr>
                <tr>
                    <th><h3><b>Modificado em</th><td><h3>:&nbsp;&nbsp;&nbsp;&nbsp;<%= @meta.updated_at%></td>
                </tr>
                <tr>
                    <th><h3><b>Unidade</th><td><h3>:&nbsp;&nbsp;&nbsp;&nbsp;<%= @meta.unity%></td>
                </tr>
            </table>
            <form action="/meta" method="PATCH" data-remote="true" accept-charset="UTF-8">
                <input type="hidden" value="<%= @meta.id %>" name="meta[id]" />
                <button type="submit" name="aprovar_imediatamente">Aprovar imediatamente</button>
            </form>
            <form action="/voto" method="POST" data-remote="true" accept-charset="UTF-8">
                <input type="hidden" value="1" name="voto[voto]" />
                <input type="hidden" value="<%= @meta.id %>" name="voto[meta_id]" />
                <button type="submit" name="aprovar">Aprovar</button>
            </form>
            <form action="/voto" method="POST" data-remote="true" accept-charset="UTF-8">
                <input type="hidden" value="0" name="voto[voto]" />
                <input type="hidden" value="<%= @meta.id %>" name="voto[meta_id]" />
                <button type="submit" name="reprovar" >Reprovar</button>
            </form>
            <div id="error-message"> </div>
        </div>
    </body>
</html>
